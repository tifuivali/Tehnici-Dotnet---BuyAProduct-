@model Store.Web.Models.ProductListViewModel
@{
    ViewBag.Title = "Index";
}

<div id="products" class="row list-group">
    @foreach (var product in Model.Products)
    {
        <div class="item  col-xs-4 col-lg-4">
        <div class="thumbnail">
            @{ var imageUrl = string.IsNullOrEmpty(product.ImageUrl) ? @Url.Content("~/Content/Images/Products/default.jpg") : product.ImageUrl;}
            <img width="400" height="400" style="width: 300px; height: 200px;" class="product-image" src=@imageUrl alt=@product.Name/>
                <div class="caption">
            <h4 class="group inner list-group-item-heading">
                @product.Name
            </h4>
            <p class="group inner list-group-item-text">
                @product.Specification
            </p>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <p class="lead">
                        $@product.Price
                    </p>
                </div>
                <div class="col-xs-12 col-md-6">
                    <a class="btn btn-success" href="@Url.Action("AddProduct", "Cart", new {@productId = product.Id})">Add to cart</a>
                </div>
            </div>
        </div>
            </div>
        </div>
    }
</div>